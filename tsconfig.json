{
  "compilerOptions": {
    /* Base Options: */
    
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "outDir": "dist",
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "plugins": [],
    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ESNext",
    "incremental": true,
    
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
